<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.n_back.ChoiceFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matrix"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/button_choose_matrix"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="@android:color/background_light"
        android:onClick="ClickChooseMatrix"
        android:scaleType="fitCenter"
        android:src="@drawable/matrix" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="One item"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/button_choose_one"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="@android:color/background_light"
        android:onClick="ClickChooseOneItem"
        android:scaleType="fitCenter"
        android:src="@drawable/triangle" />
</LinearLayout>